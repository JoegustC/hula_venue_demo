
.search{
   display: flex;
   flex-direction: row;   
   background: #0396eb;
   padding: 10rpx;
}
.search-address{
    color:white;
    margin-right:20rpx;
}

.search-form {
    width:500rpx;
    height: 50rpx;
    position: relative;
    background: white;
    border-radius:20rpx;
    padding-left: 30px; 
}
.search-form icon{
    position: absolute;
    top:6px;
    left:8px;

}
.search-input{
    font-size: 24rpx;
    display: inline-block;
    font-family: "微软雅黑";    
}
.banner image{
    width:100%;
    height: 270rpx;
}

.low-course .title{
    font-size:30rpx;
    line-height: 54rpx;   
    color: black;
}
.low-course-list{
    white-space: nowrap;
    box-sizing: border-box;
    background: #ffffff;
    padding: 16rpx;
    height: 350rpx;
    overflow-y: hidden;
}
.low-course-item{
    display: inline-block;
    width: 160rpx;
    margin-right:16rpx;
    text-align: center;
}
.low-course-item:last-child{
    margin-right:0rpx;
}
.low-course image{
    width: 100%;
    height: 226rpx;
}
.low-course-item .title{
    font-size:26rpx;
    display: block;
    line-height: 40rpx;
}
.low-course-item .new{
    color: red;
    font-size:28rpx;
}
.low-course-item .old{
    font-size:28rpx;
    color: #888888;
    text-decoration: line-through;
}

/*所有课程*/
.allCourse{
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.allCourse .title{
    padding:10rpx 0 10rpx 15rpx;
    font-size:30rpx;
}
.allCourse .course {
    padding:30rpx 20rpx 10rpx;
    display: flex;
    flex-direction: row;
    background: white;
    border-bottom: 1px solid #ccc;
}
.allCourse .course.recommend{
    background:#ffffff url(../../images/icon_best.png) no-repeat right top;
}
.allCourse .course-img{
    width:188rpx;
    height: 136rpx;
    margin-right:30rpx;
}
.allCourse .course-intro{
    display: flex;
    flex-direction: column;
}
.allCourse .course-title{
    font-weight: 500;
    font-size:30rpx;
    line-height: 45rpx;
    color: #000000;
}
.allCourse .course-address{
    color: #353535;
    font-size: 26rpx;
    line-height: 45rpx;
}
.course-btns .btn1{
    font-size:24rpx;
    color: #039df6;
    padding:3px;
    border:1px solid #039df6;
    border-radius: 2px;
    margin-right: 14rpx;
}
.course-btns .btn3{
    font-size:24rpx;
    color: #f68e03;
    padding:3px;
    border:1px solid #f68e03;
    border-radius: 2px;
}
.course-price {
    margin-top:10px;
    width: 484rpx;
}
.course-price .hui{
    font-size:24rpx;
    color: white;
    padding: 3px;
    background: #f68e03;
    margin-right:14rpx;
    border-radius: 2px;
}
.course-price .zhe {
    font-size: 26rpx;  
}
.course-price .price{
    float: right;
    color: red;
    font-size: 26rpx;
}